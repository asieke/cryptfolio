

<div class='container' style='margin-top: 20px'>

<div class="row">
  <div class="col-md-9">
    <h1>Add a Transaction</h1>
    <table class='table'>
      <thead>
        <tr>
          <th>Portfolio</th>
          <th>Coin</th>
          <th>Date</th>
          <th>Amount</th>
          <th>Price usd</th>
          <th>Price btc</th>
          <th>Kind</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.portfolio.name %></td>
            <td><%= transaction.coin.name %></td>
            <td><%= transaction.date %></td>
            <td><%= transaction.amount %></td>
            <td><%= transaction.price_usd %></td>
            <td><%= transaction.price_btc %></td>
            <td><%= transaction.kind %></td>
            <td><%= link_to 'Show', transaction %></td>
            <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
            <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">Add a Transaction</div>
      <div class="panel-body">
        <%= render 'form', transaction: @transaction %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'New Transaction', new_transaction_path %>

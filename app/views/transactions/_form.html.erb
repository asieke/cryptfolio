    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </div>

  <div class="field">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>

  <div class="field">
    <%= f.label :price_usd %>
    <%= f.text_field :price_usd %>
  </div>

  <div class="field">
    <%= f.label :price_btc %>
    <%= f.text_field :price_btc %>
  </div>

  <div class="field">
    <%= f.label :kind %>
    <%= f.collection_select(:kind, ["Buy","Sell"], :to_s, :to_s) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
